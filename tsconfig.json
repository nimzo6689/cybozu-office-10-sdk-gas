{
  "compileOnSave": false,
  "buildOnSave": false,
  "compilerOptions": {
    "target": "ES5",
    "module": "commonjs",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "outDir": "dist",
    "noImplicitAny": false,
    "declaration": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["__tests__/**/*.spec.ts"]
}
